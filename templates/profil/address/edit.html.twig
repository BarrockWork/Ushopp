{% extends 'base.html.twig' %}

{% block title %}{{ 'user.profil.addAddress'|trans }}
{% endblock %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 offset-md-3">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Compl√©ter votre formulaire</h3>
                        </div>
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.city, 'user.form.city') }}
                                {{ form_errors(form.city) }}
                                {{ form_widget(form.city, {'attr': {'class': 'email-bt'}}) }}

                            </div>
                            <div class="form-group">
                                {{ form_label(form.address, 'user.form.address') }}
                                {{ form_errors(form.address) }}
                                {{ form_widget(form.address, {'attr': {'class': 'email-bt'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.zipCode, 'user.form.zipCode') }}
                                {{ form_errors(form.zipCode) }}
                                {{ form_widget(form.zipCode, {'attr': {'class': 'email-bt'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.country, 'user.form.country') }}
                                {{ form_errors(form.country, {'attr': {'class': 'email-bt'}}) }}
                                {{ form_widget(form.country, {'attr': {'class': 'email-bt'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.firstName, 'user.form.firstname') }}
                                {{ form_errors(form.firstName) }}
                                {{ form_widget(form.firstName, {'attr': {'class': 'email-bt'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.lastName, 'user.form.lastname') }}
                                {{ form_errors(form.lastName) }}
                                {{ form_widget(form.lastName, {'attr': {'class': 'email-bt'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.others, 'user.form.others') }}
                                {{ form_errors(form.others) }}
                                {{ form_widget(form.others, {'attr': {'class': 'email-bt'}}) }}
                            </div>
                            <div class="form-group">
                                <button title="{{ 'save'|trans }}"
                                        class="btn btn-block btn-info mt-3  mb-3"><i class="fas fa-save"></i> {{ 'save'|trans }}</button>
                                <a href="{{ path('account_index') }}" class="btn btn-default" title="{{ 'back'|trans }}"><i class="fas fa-backward"></i> {{ 'back'|trans }}</a>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
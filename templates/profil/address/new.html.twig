{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.user.addAddress'|trans }}
{% endblock %}

{% block body %}
    <section class="page-add cart-page-add">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-breadcrumb">
                        <h2>{{ 'admin.user.addAddress'|trans }}<span>.</span></h2>
                        <a href="{{ path('home') }}" title="{{ 'home'|trans }}">{{ 'home'|trans }}</a>
                        <a href="{{ path('account_index') }}" title="{{ 'user.profil.title'|trans }}">{{ 'user.profil.title'|trans }}</a>
                        <a class="active" href="#" title="{{ 'admin.user.addAddress'|trans }}">{{ 'admin.user.addAddress'|trans }}</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <img src="{{ asset('build/images/banners/mangaBan7.jpg') }}" alt="Mangas">
                </div>
            </div>
        </div>
    </section>
    <div class="col-12 mt-5">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <div class="cart-page">
        <div class="content">
            <div class="row">
                <div class="col-lg-6 offset-md-3">
                    <div class="card card-primary mb-5">
                        <div class="card-header">
                            <h3 class="card-title">{{'admin.form.titleAdd'|trans}}</h3>
                        </div>
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="form-group col-md-12">
                                    {{ form_label(form.name, 'user.form.nameAddress') }}
                                    {{ form_widget(form.name) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-12">
                                    {{ form_label(form.company, 'user.company') }}
                                    {{ form_widget(form.company) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    {{ form_label(form.firstName, 'user.form.firstname') }}
                                    {{ form_widget(form.firstName) }}
                                </div>
                                <div class="form-group col-md-6">
                                    {{ form_label(form.lastName, 'user.form.lastname') }}
                                    {{ form_widget(form.lastName) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-12">
                                    {{ form_label(form.address, 'user.form.address') }}
                                    {{ form_widget(form.address) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-12">
                                    {{ form_label(form.others, 'user.form.addressAdditional') }}
                                    {{ form_widget(form.others) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    {{ form_label(form.zipCode, 'user.form.zipCode') }}
                                    {{ form_widget(form.zipCode) }}
                                </div>
                                <div class="form-group col-md-6">
                                    {{ form_label(form.city, 'user.form.city') }}
                                    {{ form_widget(form.city) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    {{ form_label(form.country, 'user.form.country') }}
                                    {{ form_widget(form.country) }}
                                </div>
                                <div class="form-group col-md-6">
                                    {{ form_label(form.phoneNumber, 'user.phoneNumber') }}
                                    {{ form_widget(form.phoneNumber) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <button title="{{ 'save'|trans }}"
                                            class="btn btn-block btn-info mt-3  mb-3"><i class="fas fa-save"></i> {{ 'save'|trans }}</button>
                                    <a href="{{ path('account_index') }}" class="btn btn-default" title="{{ 'back'|trans }}"><i class="fas fa-backward"></i> {{ 'back'|trans }}</a>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}{{ 'user.profil.addAvatar'|trans }}{% endblock %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 offset-md-3">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">{{ 'user.profil.addAvatar'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.imageFile, 'user.profil.addAvatar') }}
                                {{ form_errors(form.imageFile) }}
                                {{ form_widget(form.imageFile, {'attr': {'class': 'email-bt'}}) }}
                            </div>
                            <div class="form-group">
                                <button title="{{ 'save'|trans }}"
                                        class="btn btn-danger mt-3  mb-3"><i class="fas fa-save"></i> {{ 'save'|trans }}</button>
                                <a href="{{ path('account_index') }}" class="btn btn-primary"><i class="fas fa-backward"></i> {{ 'back'|trans }}</a>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

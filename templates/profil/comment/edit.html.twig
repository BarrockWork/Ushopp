{% extends 'base.html.twig' %}

{% block title %}{{ 'user.comment.title2'|trans }} {{ comment.id }}{% endblock %}

{% block body %}
    <section class="page-add cart-page-add">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-breadcrumb">
                        <h2>{{ 'user.comment.title2'|trans }} {{ comment.id }}<span>.</span></h2>
                        <a href="{{ path('home') }}" title="{{ 'home'|trans }}">{{ 'home'|trans }}</a>
                        <a href="{{ path('account_index') }}" title="{{ 'user.profil.title'|trans }}">{{ 'user.profil.title'|trans }}</a>
                        <a class="active"  title="{{ 'user.comment.title2'|trans }} {{ comment.id }}">{{ 'user.comment.title2'|trans }} {{ comment.id }}</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <img src="{{ asset('build/images/banners/mangaBan5.jpg') }}" alt="Mangas">
                </div>
            </div>
        </div>
    </section>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="card mb-5 card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">{{ 'admin.form.titleEdit'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="form-group col-md-4">
                                    {{ form_label(form.rating, 'comment.placeholder.rating') }}
                                    {{ form_widget(form.rating) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-12">
                                    {{ form_label(form.message, 'comment.placeholder.message') }}
                                    {{ form_widget(form.message) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <button title="{{ 'save'|trans }}"
                                        class="btn btn-block btn-info mt-3  mb-3"><i class="fas fa-save"></i> {{ 'save'|trans }}</button>
                                <a href="{{ path('profil_comments') }}" class="btn btn-default" title="{{ 'back'|trans }}"><i class="fas fa-backward"></i> {{ 'back'|trans }}</a>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}

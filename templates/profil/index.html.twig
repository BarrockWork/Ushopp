{% extends 'base.html.twig' %}

{% block title %}{{ 'user.profil.title'|trans }}
    {{ user.firstName }} {{ user.lastName }}
{% endblock %}

{% block body %}
    <section class="page-add cart-page-add">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-breadcrumb">
                        <h2>{{ 'user.profil.title'|trans }}<span>.</span></h2>
                        <a href="{{ path('home') }}" title="{{ 'home'|trans }}">{{ 'home'|trans }}</a>
                        <a class="active" href="#" title="{{ 'user.profil.title'|trans }}">{{ 'user.profil.title'|trans }}</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <img src="{{ asset('build/images/header/mangaBan3.jpg') }}" alt="Mangas">
                </div>
            </div>
        </div>
    </section>
    <div class="cart-page">
    <div class="container my-5">
        <div class="row">
            <div class="col-12 mt-5">
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                {% if not user.userAvatar %}
                                    {% set avatarRandom = 'build/images/avatars/avatar'~random([1,2,3,4,5])~'.png' %}
                                    <img class="img-circle img-sm" src="{{ asset(avatarRandom) }}" alt="User Image">
                                    <a class="btn btn-warning btn-block btn-sm" href="{{ path('user_avatar_new') }}" title="{{ 'admin.user.addAvatar'|trans }}">{{ 'admin.user.addAvatar'|trans }}</a>
                                {% else %}
                                    <img class="img-circle elevation-2" src="{{ vich_uploader_asset(user.userAvatar) }}"
                                         alt="{{ user.userAvatar.originalName }}">
                                    <div class="row">
                                        <a class="mr-5"
                                           href="{{ path('user_avatar_edit', {'id': user.userAvatar.id}) }}"><i
                                                    class="fas fa-edit"></i></a>
                                        <a href="{{ path('user_avatar_delete', {'id': user.userAvatar.id}) }}"
                                           style=" color: Tomato;">
                                            <i class="fas fa-trash-alt"></i>
                                            <form method="post"
                                                  action="{{ path('user_avatar_delete', {'id': user.userAvatar.id}) }}"
                                                  onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                <input type="hidden" name="_token"
                                                       value="{{ csrf_token('delete' ~ user.userAvatar.id) }}">
                                            </form>
                                        </a>
                                    </div>
                                {% endif %}
                                <div class="mt-3">
                                    <h4> {{ user.firstName }} {{ user.lastName }}</h4>
                                    <p class="text-muted font-size-sm"> {{ 'user.createdat'|trans }}
                                        : {{ user.createdAt|date("d/m/Y") }}</p>

                                    <p class="text-muted font-size-sm"><i class="far fa-envelope"></i> {{ user.email }}
                                    </p>
                                    <p class="text-muted font-size-sm"><i
                                                class="fas fa-phone"></i> {{ user.phoneNumber }}</p>
                                    <div class="row justify-content-between">
                                        <div class="col-6">
                                            <a href="{{ path('account_edit_profil') }}" class="btn btn-success" title="{{ 'user.profil.editTitle'|trans }}"><i
                                                        class="fas fa-user-edit"></i> {{ 'user.profil.editTitle'|trans }}
                                            </a>
                                        </div>
                                        <div class="col-6">
                                            <a href="{{ path('account_update_password') }}" class="btn btn-primary" title="{{ 'user.profil.editPassword'|trans }}"><i
                                                        class="fas fa-key"></i> {{ 'user.profil.editPassword'|trans }}
                                            </a>
                                        </div>
                                        <div class="col-6 offset-md-3 mt-2">
                                            <a href="{{ path('account_new_address') }}" class="btn btn-info" title="{{ 'admin.user.addAddress'|trans }}"><i
                                                        class="fas fa-address-card"></i> {{ 'admin.user.addAddress'|trans }}
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div id="accordion">
                        {% for userAddress in user.userAddress %}
                            <div class="card my-2 px-3">
                                <div class="card-header row justify-content-between" id="heading-{{ userAddress.id }}">
                                    <h5 class="col-10">
                                        <button class="btn btn-link" data-toggle="collapse"
                                                data-target="#collapse-{{ userAddress.id }}"
                                                aria-expanded="true" aria-controls="collapse-{{ userAddress.id }}" title="{{ userAddress.name }}">
                                            {{ userAddress.name }}
                                        </button>
                                    </h5>
                                        <div class="d-inline">
                                            <a class="btn btn-primary" href="{{ path('account_address_edit', {'id': userAddress.id}) }}" title="{{ 'edit'|trans }}">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                        <div class="d-inline">
                                            <form method="post" action="{{ path('account_address_delete', {'id': userAddress.id}) }}" onsubmit="return confirm({{ 'user.messages.confirmDeleteAddress'|trans }});">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ userAddress.id) }}">
                                                <button class="btn btn-danger" title="{{ 'delete'|trans }}"><i class="fas fa-trash-alt"></i></button>
                                            </form>
                                        </div>
                                </div>

                                <div id="collapse-{{ userAddress.id }}" class="collapse show"
                                     aria-labelledby="heading-{{ userAddress.id }}"
                                     data-parent="#accordion">
                                    <div class="card-body">
                                        <i class="fas fa-map-marker-alt"></i> {{ userAddress.address }},
                                        <i class="fas fa-city"></i> {{ userAddress.city }}, {{ userAddress.zipCode }},
                                        <i class="fas fa-globe-europe"></i> {{ userAddress.country }}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        <div class="row gutters-sm">
                            <div class="col-sm-6 my-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h4 class="text-center"><i
                                                    class="fas fa-shopping-cart"></i> {{ 'user.orders'|trans }}</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 my-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h4 class="text-center"><i
                                                    class="fas fa-comment-dots"></i> {{ 'user.comments'|trans }}</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    </div>
{% endblock %}
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'product.modalFilter'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            {{ form_label(form.categories, 'product.orderByCategory') }}
                            {{ form_widget(form.categories) }}
                        </div>
                    </div>
                </div>
                <hr/>
                <div class="row">
                    <div class="form-group col-12">
                        {{ form_label(form.sortProduct, 'product.orderBy') }}
                        {{ form_widget(form.sortProduct) }}
                    </div>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            {{ form_label(form.minPrice, 'product.priceMin') }}
                            {{ form_widget(form.minPrice) }}
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            {{ form_label(form.maxPrice, 'product.priceMax') }}
                            {{ form_widget(form.maxPrice) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="{{ path('reset_product_filter') }}" title="{{ 'product.resetFilter'|trans }}" class="btn btn-secondary">
                    <i class="fas fa-history"></i> {{ 'product.resetFilter'|trans }}
                </a>
                <button type="button" class="btn btn-danger" data-dismiss="modal" title="{{ 'close'|trans }}">
                    <i class="fas fa-times"></i> {{ 'close'|trans }}
                </button>
                <button type="submit" title="{{ 'filter'|trans }}" class="btn btn-success" title="{{ 'filter'|trans }}">
                    <i class="fas fa-sort-amount-up-alt"></i> {{ 'filter'|trans }}
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% extends 'base.html.twig' %}

{% block title %}{{ 'user.signup'|trans }}{% endblock %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 offset-md-3">
                    <div class="card card-primary my-5">
                        <div class="card-header">
                            <h3 class="card-title">Cr√©er un compte</h3>
                        </div>
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.firstName, 'user.form.firstname') }}
                                {{ form_widget(form.firstName) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.lastName, 'user.form.lastname') }}
                                {{ form_widget(form.lastName) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.email, 'user.form.email') }}
                                {{ form_widget(form.email) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.plainPassword, 'user.form.password') }}
                                {{ form_widget(form.plainPassword) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.phoneNumber, 'user.form.phoneNumber') }}
                                {{ form_widget(form.phoneNumber) }}
                            </div>
                            <button type="submit" class="btn btn-success">{{ 'user.signup'|trans }}</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

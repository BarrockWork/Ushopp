{% extends 'base.html.twig' %}
{% block adminlte %}{% endblock %}

{% block title %}{{ 'company.editTitle'|trans }}{% endblock %}

{% block body_admin %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">{{ 'company.editTitle'|trans }}</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}" title="{{ 'home'|trans }}">{{ 'home'|trans }}</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('admin_company_index') }}" title="{{ 'company.title'|trans }}">{{ 'company.title'|trans }}</a></li>
                            <li class="breadcrumb-item active">{{ 'company.editTitle'|trans }}</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6 offset-md-3">
                        <div class="card card-secondary">
                            <div class="card-header">
                                <h3 class="card-title">{{'admin.form.titleAdd'|trans}}</h3>
                            </div>
                            <div class="card-body">
                                {% if  is_granted('ROLE_SUPER_ADMIN')%}
                                    {% include 'admin/company/_form.html.twig' %}
                                {% else %}
                                    <p>{{ 'company.superAdmin'|trans }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}
{% block adminlte %}{% endblock %}

{% block title %}
	{{ 'admin.order.viewall'|trans }}
{% endblock %}


{% block body_admin %}

	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<div class="content-header">
			{% for type, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
						{{ message }}
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
				{% endfor %}
			{% endfor %}
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1 class="m-0">{{ 'admin.order.viewall'|trans }}</h1>
					</div>
					<!-- /.col -->
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="{{ path('admin_dashboard') }}" title="{{ 'home'|trans }}">{{ 'home'|trans }}</a>
							</li>
						</li>
						<li class="breadcrumb-item active" title={{ 'admin.order.viewall'|trans }}>{{ 'admin.order.viewall'|trans }}</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->
	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div class="card-header">
							<h3 class="card-title">{{ 'admin.order.list'|trans }}</h3>
						</div>
						<div class="card-body">
							<table id="admin_products_table" class="table table-bordered table-striped">
								<thead>
									<tr>
										<th>Id</th>
										<th>{{'createdAt'|trad }}</th>
										<th>Status</th>
										<th>{{'PaymentAt'|trans}}</th>
										<th>{{'DeliveryAddress'|trans}}</th>
										<th>{{'CarrierName'|trans}}</th>
										<th>{{'CarrierPrice'|trans}}</th>
										<th>Actions</th>
									</tr>
								</thead>
							</th</tr>
						</thead>
						<tbody>
							{% for order in orders %}
								<tr>
									<td>{{ order.id }}</td>
									<td>{{ order.name }}</td>
									<td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
									<td>{{ order.status }}</td>
									<td>{{ order.paymentAt ? order.paymentAt|date('Y-m-d H:i:s') : '' }}</td>
									<td>{{ order.deliveryAddress }}</td>
									<td>{{ order.carrierName }}</td>
									<td>{{ order.carrierPrice }}</td>
									<td>
										<a href="{{ path('order_show', {'id': order.id}) }}">show</a>
										<a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="8">{{ 'order.messages.nobody'|trans }}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascript_admin_additionnals %}
	<script>
		$(function () {
$("#userListTable").DataTable({
"responsive": true,
"lengthChange": false,
"autoWidth": false,
"buttons": [
"copy",
"csv",
"excel",
"pdf",
"print",
"colvis"
]
}).buttons().container().appendTo('#userListTable_wrapper .col-md-6:eq(0)');
});
	</script>
{% endblock %}

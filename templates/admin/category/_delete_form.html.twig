<form method="post" action="{{ path('admin_category_delete', {'id': category.id}) }}" onsubmit="return confirm('{{ 'admin.category.delete'|trans }}');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
	<button class="btn btn-danger" title="{{ 'delete'|trans }}"><i class="fas fa-trash-alt"></i> {{ 'delete'|trans }}</button>

</form>

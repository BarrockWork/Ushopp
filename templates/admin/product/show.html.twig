{% extends 'base.html.twig' %}
{% block adminlte %}{% endblock %}

{% block title %}Product{% endblock %}

{% block body_admin %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>NameSlug</th>
                <td>{{ product.nameSlug }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ product.reference }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Tax</th>
                <td>{{ product.tax }}</td>
            </tr>
            <tr>
                <th>Ecotax</th>
                <td>{{ product.ecotax }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ product.weight }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ product.size }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ product.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsBest</th>
                <td>{{ product.isBest ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ product.imageName }}</td>
            </tr>
            <tr>
                <th>OriginalName</th>
                <td>{{ product.originalName }}</td>
            </tr>
            <tr>
                <th>MimeType</th>
                <td>{{ product.mimeType }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ product.imageSize }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_product_index') }}">back to list</a>

    <a href="{{ path('admin_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('admin/product/_delete_form.html.twig') }}
{% endblock %}

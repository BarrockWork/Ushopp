{{ form_start(form) }}
<div class="row ">
    <div class="form-group col-md-12">
        {{ form_label(form.title, 'carousel.title') }}
        {{ form_widget(form.title) }}
    </div>
</div>
<div class="row">
    <div class="form-group col-md-12">
        {{ form_label(form.content, 'carousel.content') }}
        {{ form_widget(form.content) }}
    </div>
</div>
<div class="row">
    <div class="form-group col-md-6">
        {{ form_label(form.btnTitle, 'carousel.btnTitle') }}
        {{ form_widget(form.btnTitle) }}
    </div>
    <div class="form-group col-md-6">
        {{ form_label(form.btnUrl, 'carousel.btnUrl') }}
        {{ form_widget(form.btnUrl) }}
    </div>
</div>
<hr/>
<div class="row">
    <div class="form-group col-md-12">
        {{ form_label(form.imageFile, 'product.form.thumbnail') }}
        {{ form_widget(form.imageFile) }}
    </div>
</div>
<div class="form-group">
    <button title="{{ 'save'|trans }}"
            class="btn btn-block btn-info mt-3  mb-3"><i class="fas fa-save"></i> {{ 'save'|trans }}</button>
    <a href="{{ path('admin_carousel_index') }}" class="btn btn-default" title="{{ 'back'|trans }}"><i class="fas fa-backward"></i> {{ 'back'|trans }}</a>
</div>
{{ form_end(form) }}


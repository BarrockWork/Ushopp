{% extends 'base.html.twig' %}
{% block adminlte %}{% endblock %}

{% block title %}
    {{ 'carousel.form.add'|trans }}
{% endblock %}

{% block body_admin %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">{{ 'carousel.form.add'|trans }}</h1>
                    </div>
                    <!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <a href="{{ path('admin_dashboard') }}" title="{{ 'home'|trans }}">{{ 'home'|trans }}</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="{{ path('admin_carousel_index') }}" title="{{ 'carousel.viewall'|trans }}">{{ 'carousel.viewall'|trans }}</a>
                            </li>
                            <li class="breadcrumb-item active">{{ 'carousel.form.add'|trans }}</li>
                        </ol>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6 offset-1">
                        <div class="card card-secondary">
                            <div class="card-header">
                                <h3 class="card-title">{{ 'admin.form.titleAdd'|trans }}</h3>
                            </div>
                            <div class="card-body">
                                {% include 'admin/carousel/_form.html.twig' %}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h6 class="card-title">{{ 'carousel.listRoute'|trans }}</h6>
                            </div>
                            <div class="card-body">
                                <dl class="dl-horizontal">
                                    <dt>{{ 'home'|trans }}</dt>
                                    <dd>home</dd>
                                    <dt>{{ 'product.list'|trans }}</dt>
                                    <dd>all_products</dd>
                                    <dt>{{ 'contact.title'|trans }}</dt>
                                    <dd>contact_us</dd>
                                    <dt>{{ 'user.profil.title'|trans }}</dt>
                                    <dd>account_index</dd>
{#                                    <dt>{{ 'about.title'|trans }}</dt>#}
{#                                    <dd>about</dd>#}
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript_admin_additionnals %}
    {# Script bsCustomFileInputjs #}
    {{ encore_entry_script_tags('bsfileinput') }}
{% endblock %}

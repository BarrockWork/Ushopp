<form method="post" action="{{ path('admin_carousel_delete', {'id': carousel.id}) }}" onsubmit="return confirm({{ 'carousel.delete'|trans }});">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ carousel.id) }}">
    <button class="btn btn-danger" title="{{ 'delete'|trans }}"><i class="fas fa-trash-alt"></i></button>
</form>

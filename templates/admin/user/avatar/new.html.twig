{% extends 'base.html.twig' %}
{% block adminlte %}{% endblock %}

{% block title %}{{ 'user.profil.addAvatar'|trans }}{% endblock %}

{% block body_admin %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">{{ 'user.profil.addAvatar'|trans }}</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Admin</a></li>
                            <li class="breadcrumb-item active">{{ 'user.profil.addAvatar'|trans }}</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6 offset-md-3">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">{{ 'user.profil.addAvatar'|trans }}</h3>
                            </div>
                            <div class="card-body">
                                {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_label(form.imageFile, 'user.profil.addAvatar') }}
                                    {{ form_errors(form.imageFile) }}
                                    {{ form_widget(form.imageFile, {'attr': {'class': 'email-bt'}}) }}
                                </div>
                                <div class="form-group">
                                    <button title="{{ 'save'|trans }}"
                                            class="btn btn-danger mt-3  mb-3"><i
                                                class="fas fa-save"></i> {{ 'save'|trans }}</button>
                                    <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-primary"><i
                                                class="fas fa-backward"></i> {{ 'back'|trans }}</a>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

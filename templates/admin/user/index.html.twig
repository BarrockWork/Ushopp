{% extends 'base.html.twig' %}
{% block adminlte %}{% endblock %}

{% block title %}{{ 'admin.user.viewall'|trans }}{% endblock %}

{% block body_admin %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">{{ 'admin.user.viewall'|trans }}</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">{{ 'home'|trans }}</a></li>
                            <li class="breadcrumb-item active">{{ 'admin.user.viewall'|trans }}</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">{{ 'admin.user.list'|trans }}</h3>
                            </div>
                            <div class="card-body">
                                <table id="userListTable" class="table table-bordered table-striped">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>{{ 'user.firstname'|trans }}</th>
                                        <th>{{ 'user.lastname'|trans }}</th>
                                        <th>{{ 'user.phoneNumber'|trans }}</th>
                                        <th>{{ 'user.email'|trans }}</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>{{ user.id }}</td>
                                            <td>{{ user.firstName }}</td>
                                            <td>{{ user.lastName }}</td>
                                            <td>{{ user.phoneNumber }}</td>
                                            <td>{{ user.email }}</td>
                                            <td class="row">
                                                <a href="{{ path('admin_user_show', {'id': user.id}) }}"
                                                   class="btn btn-success mr-2"><i class="fas fa-eye"></i> {{ 'seeMore'|trans }}</a>
                                                <a href="{{ path('admin_user_edit', {'id': user.id}) }}"
                                                   class="btn btn-primary mr-2"><i class="fas fa-user-edit"></i> {{ 'edit'|trans }}</a>
                                                {{ include('admin/user/_delete_form.html.twig') }}

                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="8">{{ 'user.messages.nobody'|trans }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript_admin_additionnals %}
    <script>
        $(function () {
            $("#userListTable").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#userListTable_wrapper .col-md-6:eq(0)');
        });
    </script>
{% endblock %}

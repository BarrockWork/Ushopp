{% extends 'base.html.twig' %}
{% block adminlte %}{% endblock %}

{% block title %}{{ 'admin.user.editAddress'|trans }}{% endblock %}

{% block body_admin %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-12">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Admin</a></li>
                            <li class="breadcrumb-item active">{{ 'admin.user.editAddress'|trans }}</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6 offset-md-3">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">{{ 'admin.user.editAddress'|trans }}</h3>
                            </div>
                            <div class="card-body">
                                {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_label(form.city, 'user.form.city') }}
                                    {{ form_widget(form.city, {'attr': {'class': 'email-bt'}}) }}

                                </div>
                                <div class="form-group">
                                    {{ form_label(form.address, 'user.form.address') }}
                                    {{ form_widget(form.address, {'attr': {'class': 'email-bt'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.zipCode, 'user.form.zipCode') }}
                                    {{ form_widget(form.zipCode, {'attr': {'class': 'email-bt'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.country, 'user.form.country') }}
                                    {{ form_widget(form.country, {'attr': {'class': 'email-bt'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.firstName, 'user.form.firstname') }}
                                    {{ form_widget(form.firstName, {'attr': {'class': 'email-bt'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.lastName, 'user.form.lastname') }}
                                    {{ form_widget(form.lastName, {'attr': {'class': 'email-bt'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.others, 'user.form.others') }}
                                    {{ form_widget(form.others, {'attr': {'class': 'email-bt'}}) }}
                                </div>
                                <div class="form-group">
                                    <button title="{{ 'save'|trans }}"
                                            class="btn btn-danger mt-3  mb-3"><i class="fas fa-save"></i> {{ 'save'|trans }}</button>
                                    <a href="{{ path('admin_user_show', {'id': userAddress.user.id}) }}" class="btn btn-primary"><i class="fas fa-backward"></i> {{ 'back'|trans }}</a>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

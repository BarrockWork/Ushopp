{% extends 'base.html.twig' %}

{% block title %}{{ 'product.allProducts'|trans }}

{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row">
            <h1 class="new_text text-center">
                <strong>{{ 'product.title2'|trans }}</strong>
            </h1>
            <p class="consectetur_text">{{ 'product.ProductDesc'|trans }}</p>
            <div class="col-12 mt-5">
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
        <!-- Page Add Section Begin -->
        <section class="page-add">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="page-breadcrumb">
                            <h2>Ushopp<span>.</span></h2>
                            <a href="{{ path('home') }}">{{ 'home'|trans }}</a>
                            <a class="active" href="{{ path('all_products') }}">{{ 'product.allProducts'|trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Page Add Section End -->

        <div class="row justify-content-between my-5 ">
            <!-- Button trigger modal -->
            <button type="button" title="{{ 'filter'|trans }}" class="btn btn-primary btn-lg" data-toggle="modal"
                    data-target="#exampleModal">
                <i class="fas fa-sort-amount-up-alt"></i> {{ 'filter'|trans }}
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">{{ 'product.advancedSearch'|trans }}</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-7">
                                    <div class="form-group col-12">
                                        {{ form_label(form.categories, 'product.form.category') }}
                                        {{ form_widget(form.categories, {'attr': {'class': 'email-bt'}}) }}
                                    </div>
                                    <div class="categories-filter">
                                        <div class="cf-left">
                                            <div class="form-group col-12">
                                                {{ form_label(form.sortProduct, 'product.orderBy') }}
                                                {{ form_widget(form.sortProduct, {'attr': {'class': 'email-bt'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="categories-filter">
                                        <div class="cf-left">
                                            <div class="form-group col-12">
                                                {{ form_label(form.isBest, 'product.orderBy') }}
                                                {{ form_widget(form.isBest, {'attr': {'class': 'email-bt'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-5">
                                    <div class="form-group col-12">
                                        {{ form_label(form.minPrice, 'product.priceMin') }}
                                        {{ form_widget(form.minPrice, {'attr': {'class': 'email-bt'}}) }}
                                    </div>
                                    <div class="form-group col-12">
                                        {{ form_label(form.maxPrice, 'product.priceMax') }}
                                        {{ form_widget(form.maxPrice, {'attr': {'class': 'email-bt'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal"><i
                                        class="fas fa-times"></i> {{ 'close'|trans }}</button>
                            <button title="{{ 'save'|trans }}"
                                    class="btn btn-success"><i
                                        class="fas fa-sort-amount-up-alt"></i> {{ 'filter'|trans }}
                            </button>
                        </div>

                    </div>
                </div>
            </div>
            {{ form_end(form) }}
            <p>Articles total: ({{ productFiltered.getTotalItemCount }})</p>
        </div>
        {% if productFiltered|length == 0 %}
        <div class='container'>
            <h1>
                <strong>
                    {{ 'product.OutofStockDesc'|trans }}&#128532;</strong>
            </h1>
            {% else %}
                <div class="container">
                    <div class="row">
                        {% for product in productFiltered %}
                            <div class="col-sm-4">
                                <!-- Card -->
                                <div class="card">

                                    <div class="view zoom overlay">
                                        {% if product.isBest %}
                                            <div class="row">
                                                <h4 class="m-2"><span
                                                            class="badge badge-primary badge-pill badge-news">{{ product.category.name }}</span>
                                                </h4>
                                                <h4 class="m-2"><span
                                                            class="badge badge-success badge-pill badge-news">{{ 'product.isBest'|trans }}</span>
                                                </h4>
                                            </div>
                                        {% else %}
                                            <h4 class="m-2"><span
                                                        class="badge badge-primary badge-pill badge-news">{{ product.category.name }}</span>
                                            </h4>
                                        {% endif %}
                                        <a href="#!">
                                            <div class="mask">
                                                <img alt="{{ product.name }}" class="img-fluid"
                                                     src="{{ vich_uploader_asset(product, 'imageFile')|imagine_filter('product_thumb') }}">
                                                <div class="mask rgba-black-slight"></div>
                                            </div>
                                        </a>
                                    </div>

                                    <div class="card-body text-center">

                                        <h5>{{ product.name }}</h5>
                                        <p class="small text-muted text-uppercase mb-2">{{ product.category.name }}</p>
                                        <hr>
                                        <h6 class="mb-3">
                                                <span class='justify-content-center align-items-center mt-3' style="color:#ff4e5b;">
                                                    {% set tva = product.price * (product.tax/100) %}
                                                    {{ (product.price + tva)|number_format(2, ',', '.')  }} â‚¬
                                                </span>
                                        </h6>

                                        <a class="btn btn-primary btn-sm mr-1 mb-2" title="{{ 'product.addToCart'|trans }}" href="{{ path('add_to_cart', {'id': product.id}) }}">
                                            <i class="fas fa-shopping-cart pr-2"></i> {{ 'product.addToCart'|trans }}
                                        </a>
                                        <a href="{{ path('product_show', {'id': product.id}) }}"
                                           class="btn btn-light btn-sm mr-1 mb-2">
                                            <i class="fas fa-info-circle pr-2"></i> {{ 'product.show'|trans }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!-- Card -->
                        {% endfor %}
                        <div class="pagination col-lg-12 justify-content-center text-center my-5">
                            {{ knp_pagination_render(productFiltered) }}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
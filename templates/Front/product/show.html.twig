{% extends 'base.html.twig' %}

{% block title %}
    {{ 'product.title'|trans }}
{% endblock %}

{% block body %}
    <section class="page-add cart-page-add">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-breadcrumb">
                        <h2>{{ 'user.profil.title'|trans }}<span>.</span></h2>
                        <a href="{{ path('home') }}" title="{{ 'home'|trans }}">{{ 'home'|trans }}</a>
                        <a href="{{ path('all_products') }}"
                           title="{{ 'product.title'|trans }}">{{ 'product.title'|trans }}</a>
                        <a href="#" title="{{ 'product.title'|trans }}">{{ product.category.name|capitalize }}</a>
                        <a class="active" href="#" title="{{ 'user.profil.title'|trans }}">{{ product.name }}</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <img src="{{ asset('build/images/banners/mangaBan9.png') }}" alt="Mangas">
                </div>
            </div>
        </div>
    </section>
    <div class="col-12 mt-5">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <section class="product-page my-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="product-slider owl-carousel">
                        <div class="product-img">
                            <figure>
                                <img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="{{ product.name }}">
                                <div class="p-status">{{ product.category.name }}</div>
                            </figure>
                        </div>
                    </div>

                </div>
                <div class="col-lg-6">
                    <div class="product-content">
                        <h2>{{ product.name }}</h2>
                        <div class="pc-meta">
                            <h5>{{ product.price }} €</h5>
                            <div class="rating">
                                {% if product.comments | length > 0 %}
                                    {% include "partials/rating.html.twig" with {'rating': product.avgRAtings}%}
                                {% else %}
                                    <small>Pas encore noté</small>
                                {% endif %}
                            </div>
                        </div>
                        <p>{{ product.description }}</p>
                        <ul class="tags">
                            <li><span>{{ 'product.form.category'|trans}} :</span> {{ product.category.name }}</li>
                            <li><span>{{ 'product.form.reference'|trans}} :</span> {{ product.reference }}</li>
                            <li><span>{{ 'product.form.size'|trans }} :</span> {{ product.size }}</li>
                            <li><span>{{ 'product.form.weight'|trans}} :</span> {{ product.weight }}</li>
                        </ul>
                        <a href="{{ path('add_to_cart', {'id': product.id}) }}" class="primary-btn pc-btn"> <i
                                    class="fas fa-cart-plus"></i> {{ 'product.addToCart'|trans }}</a>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <nav class="w-100">
                    <div class="nav nav-tabs" id="product-tab" role="tablist">
                        <a class="nav-item nav-link active" id="product-desc-tab" data-toggle="tab" href="#product-desc"
                           role="tab" aria-controls="product-desc"
                           aria-selected="true">{{ 'product.description'|trans }}</a>
                        <a class="nav-item nav-link" id="product-comments-tab" data-toggle="tab"
                           href="#product-comments" role="tab" aria-controls="product-comments"
                           aria-selected="false">{{ product.comments|length }} {{ 'product.comments'|trans }}</a>
                        <a class="nav-item nav-link" id="add-comments-tab" data-toggle="tab"
                           href="#add-comments" role="tab" aria-controls="add-comments"
                           aria-selected="false">{{ 'comment.add'|trans }}</a>
                        {# <a class="nav-item nav-link" id="product-rating-tab" data-toggle="tab" href="#product-rating" role="tab" aria-controls="product-rating" aria-selected="false">{{ 'product.rating'|trans }}</a> #}
                    </div>
                </nav>
                <div class="tab-content p-3" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="product-desc" role="tabpanel"
                         aria-labelledby="product-desc-tab">
                        {{ product.description }}
                    </div>
                    <div class="tab-pane fade" id="product-comments" role="tabpanel"
                         aria-labelledby="product-comments-tab">
                        {% if product.comments|length == 0 %}
                            {{ 'product.noComments'|trans }}
                        {% else %}
                            {% include  'admin/product/_comments.html.twig' with {'comments': product.comments} %}
                        {% endif %}
                    </div>
                    <div class="tab-pane fade" id="add-comments" role="tabpanel" aria-labelledby="add-comments-tab">
                        {% if app.user %}
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="form-group col-md-12">
                                    {{ form_label(form.rating, 'comment.placeholder.rating') }}
                                    {{ form_errors(form.rating) }}
                                    {{ form_widget(form.rating) }}
                                </div>
                                <div class="form-group col-md-12">
                                    {{ form_label(form.message, 'comment.placeholder.message') }}
                                    {{ form_errors(form.message) }}
                                    {{ form_widget(form.message) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <button title="{{ 'save'|trans }}"
                                        class="btn btn-block btn-info mt-3  mb-3"><i
                                            class="fas fa-save"></i> {{ 'send'|trans }}</button>
                            </div>
                            {{ form_end(form) }}
                        {% else %}
                            <p>Veuillez vous connecter, pour poster un commentaire !</p>
                            <a href="{{ path('app_login') }}">{{ 'user.signin'|trans }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

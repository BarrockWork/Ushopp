<!-- Header Section Begin -->
<header class="header-section">
	<div class="container-fluid">
		<div class="inner-header">
			<div class="logo_custom">
				<a href="{{ path('home') }}" title="{{ 'title'|trans }}"><img src="{{ asset('build/images/logo/logo_op_42x42.png') }}" alt="Ushopp">
					Ushopp</a>
			</div>
			<div class="header-right">
				{% set routeName = app.request.get('_route') %}
				<div>
					<a href="{{ path('choose_language', {'lang': 'fr', 'routeName': routeName}) }}" title="{{ 'language.fr'|trans }}"><img src="{{ asset('build/images/flags/fr.png') }}" title="{{ 'language.fr'|trans }}"></a>
					|<a href="{{ path('choose_language', {'lang': 'en', 'routeName': routeName}) }}" title="{{ 'language.en'|trans }}"><img src="{{ asset('build/images/flags/en.png') }}" title="{{ 'language.en'|trans }}"></a>
					<a href="{{ path('account_index') }}" class="ml-3 mr-3" title="{{ 'user.profil.title'|trans }}"><img src="{{ asset('build/images/icons/man.png') }}" alt="{{ 'user.profil.title'|trans }}"></a>
					<a href="{{ path('my_cart') }}" title="{{ 'cart.title'|trans }}">
						<img src="{{ asset('build/images/icons/bag.png') }}" alt="">
						<span>{{ app.session.get('cart')|length }}</span>
					</a>
				</div>
			</div>
			<div class="user-access">
				{% if app.user is not null %}
					<a href="{{ path('app_logout') }}" class="in" title="{{'user.signout'|trans}}">{{'user.signout'|trans}}</a>
				{% else %}
					<a href="{{ path('app_register') }}" title="{{'user.signup'|trans}}">{{'user.signup'|trans}}</a>
					<a href="{{ path('app_login') }}" class="in" title="{{'user.signin'|trans}}">{{'user.signin'|trans}}</a>
				{% endif %}

			</div>
			<nav class="main-menu mobile-menu">
				<ul>
					<li>
						<a class="active" href="{{ path('home') }}">{{ 'home'|trans }}</a>
					</li>
					<li>
						<a href="{{ path('all_products') }}" title="{{ 'product.title2'|trans }}">{{ 'product.title2'|trans }}</a>
						{# <ul class="sub-menu">
							<li>
								<a href="{{ path('all_products') }}">{{ 'product.allProducts'|trans }}</a>
							</li>
						</ul> #}
					</li>
					<li>
						<a href="{{path('aboutUs')}}" title="{{ 'about'|trans }}">{{ 'about'|trans }}</a>
					</li>
					{#                    <li><a href="#">Blog</a></li>#}
					<li>
						<a href="{{ path('contact_us') }}" title="{{ 'contact.title'|trans }}">{{ 'contact.title'|trans }}</a>
					</li>
					{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER_ADMIN') %}
						<li>
							<a href="{{ path('admin_dashboard') }}" class="nav-link btn btn-outline-info" title="{{ 'admin.titleHeader'|trans }}">
								<i class="fas fa-laptop-house"></i>
								{{ 'admin.titleHeader'|trans }}</a>
						</li>
					{% endif %}
				</ul>
			</nav>
		</div>
	</div>
</header>
